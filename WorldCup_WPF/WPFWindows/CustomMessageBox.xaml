<Window x:Class="WorldCup_WPF.WPFWindows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:WorldCup_WPF.Properties"
        xmlns:local="clr-namespace:WorldCup_WPF.WPFWindows"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="150" Width="225">
    <Grid>
        <Label Content="{x:Static lang:Resources.lbConfirm}" Width="Auto" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 40"/>
        <Button Click="btnOK_Click" x:Name="btnOK" Content="OK" Width="80" Height="40" HorizontalAlignment="Left" Margin="10"  VerticalAlignment="Bottom"/>
        <Button Click="Cancel_Click" x:Name="Cancel" Content="{x:Static lang:Resources.lbCancel}" Width="80" Height="40" HorizontalAlignment="Right" Margin="10"  VerticalAlignment="Bottom"/>

    </Grid>
</Window>
